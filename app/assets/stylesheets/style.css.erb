body {
  background-color: #efefef;
  font-family: 'Josefin Sans', sans-serif;
  font-weight: bold;
}

body.evening, body.goodnight, body.build {
  background-color: #06496F;
  -webkit-transition: background-color 1300ms linear;
  -moz-transition: background-color 1300ms linear;
  -o-transition: background-color 1300ms linear;
  transition: background-color 1300ms linear;
}

body.home {
  background-image: url("<%=asset_path('water.jpg')%>")
}

.evening h4 {
  color: #fff;
  text-align: center;
}

#main-nav {
  background: #1C243B;
}

.evening #main-nav, .goodnight #main-nav, .build #main-nav {
  background: #0D3851;
}

form {
  font-size: 2em;
}

.screenContent {
  padding-top: 20px;
}

.splash-screen {
  text-align: center;
}

.splash-screen svg {
  /*margin-top: 20%;*/
  width: 90%;
  height: 90%;
}

.splash-heading {
  color: #476373;
  font-weight: bolder;
}

nav .sun-icon, nav .moon-icon {
  height: 40px;
  width: 40px;
  margin-top: 7px;
}



.swipe {
  overflow: hidden;
  visibility: hidden;
  position: relative;
}
.swipe-wrap {
  overflow: hidden;
  position: relative;
}
.swipe-wrap > div {
  float:left;
  width: 100%;
  position: relative;
}

.home .valign-wrapper.outer-valign-wrapper {
  height: 60vh;
}

.valign {
  margin: 0 auto;
}

#home-buttons {
  width: 100%;
}

#home-buttons .home-button {
  color: #1C243B;
  background-color: white;
  opacity: 0.65;
  margin: 10px auto;
  display: block;
  width: 300px;
  height: 90px;
  font-size: 2em;
  border-radius: 8px;
}


#currents-save-button .save-button {
  background-color: #476373;
  margin: 20px auto;
  display: block;
}

#start-day-button .start-day {
  background-color: #476373;
  margin: 20px auto;
  display: block;
}

#login-button .login {
  background-color: #367498;
  margin: 20px auto;
  display: block;
}

#login-form {
  color: white;
}

#login-form a {
  color: #1C243B;
  font-weight: bold;
}

#registration-button .register {
  background-color: #367498;
  margin: 20px auto;
  display: block;
  font-weight: normal;
  font-size: 0.75em;
}

#build-button .build {
  background-color: #367498;
  margin: 20px auto;
  display: block;
  font-size: 1.2rem;
}

#use-last-button .build {
  background-color: #367498;
  margin: 20px auto;
  display: block;
  font-size: 1.2rem;
}


.placeholder-icon {
  padding: 10px 0px 0px 10px;
  width: 15%;
  height: 80%;
}

#goodnight-message {
  color: white;
}

.errors {
  text-align: center;
}

.podcast-icon {
  max-height: 50%;
  max-width: 25%;
  min-width: 20%;
  min-height: 40%;
  display: inline-block;
  float: left;
  padding-left: 5px;
}

.podcast-link {
  clear: both;
  padding: 5px;

}

.podcast-info {
  display: inline-block;
  float: right;
  padding-right: 5px;
}


