  margin-right: 10px;
}


#goodnight-card {
  background: rgba(16, 50, 70, 0.71);
}

#stream button {
  background-color: #476373;
}

#goodnight-card svg.moon-icon {
  height: 80px;
  width: 80px;
}

#build-screen {
  color: #fff;
}

#build-screen #selected-currents {
  color: #233139;
}


