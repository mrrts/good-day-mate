/** Bobbing Boat **********************************************/

.start .bobbing,
.start #MyCanvas,
.evening #MyCanvas,
.evening .bobbing,
.build .bobbing,
.build #MyCanvas,
.login .bobbing,
.login #MyCanvas,
.registration .bobbing,
.registration #MyCanvas, {
  display: none;
}

.bobbing {
    width: 20vw;
    position: fixed;
    bottom: 20px;
    right: 100px;
    animation: bobbingAnim ease-in-out 14s infinite;
    -moz-animation: bobbingAnim ease-in-out 14s infinite;
    -webkit-animation: bobbingAnim ease-in-out 14s infinite;
    z-index: -3;
}
.bobbing img {
  width: 100%;
}
.bobbing.text {
    font-size: 50px;
    color: #000;
    left: 30px;
    top: 30px;
}
@keyframes bobbingAnim {
   50% {
       transform: translate(-50px, 10px) translateZ(0);
   }
}
@-webkit-keyframes bobbingAnim {
   50% {
       -webkit-transform: translate3d(-50px, 10px, 0);
   }
}
@-moz-keyframes bobbingAnim {
   50% {
       -moz-transform: translate3d(-50px, 10px, 0);
   }
}
