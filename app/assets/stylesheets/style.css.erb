#ui-datepicker-div {
  font-family: 'Roboto', helvetica, sans-serif;
  font-weight: normal;
  display: none;
  background-color: #B2BBCC;
  width: 100%;
  top: 25% !important;
  position: fixed !important;
  left: 0 !important;
  padding: 10px 30px;
  box-shadow: 0px 0px 30px #000;
}

.ui-datepicker-header a {
  display: inline-block;
  padding: 2px 8px;
  background: #1C243B;
  margin-bottom: 10px;
  margin-right: 5px;
  border-radius: 10px;
  color: white;
  font-size: 0.85em;
}

.ui-datepicker-header a.prev {
  float: left;
}

.ui-datepicker-header a.next {
  float: right;
}

.ui-datepicker-title {
  font-weight: bold;
  font-size: 1.6em;
  color: #1C243B;
}

#ui-datepicker-div td {
  padding: 8px 6px;
}

#ui-datepicker-div td a {
  color: #FFFFFF;
  text-shadow: 2px 2px 3px #000;
}

#bottle-message-submit {
  background-color: #B2BBCC;
}

#bottle-messages-display-modal {
  color: #233139;
  background: #FFE991;
}

#bottle-messages-display-modal .bottle-message-dismiss-link {
  color: #233139;
  display: inline-block;
  margin-top: -6px;
  margin-right: -6px;
  font-size: 0.8em;
}
