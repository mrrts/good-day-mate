body {
	background-color: #eee;
  font-family: 'Josefin Sans', sans-serif;
  font-weight: bold;
}

body.evening, body.goodnight, body.build {
  background: #06496F;
}

.evening h4 {
  color: #fff;
  text-align: center;
}

#main-nav {
  background: #476373;
}

.evening #main-nav, .goodnight #main-nav, .build #main-nav {
  background: #0D3851;
}

form {
  font-size: 2em;
}

.screenContent {
  padding-top: 20px;
}

.splash-screen {
  text-align: center;
}

.splash-screen svg {
  /*margin-top: 20%;*/
  width: 90%;
  height: 90%;
}

.splash-heading {
  color: #476373;
  font-weight: bolder;
}

nav .sun-icon, nav .moon-icon {
  height: 40px;
  width: 40px;
  margin-top: 7px;
}



.swipe {
  overflow: hidden;
  visibility: hidden;
  position: relative;
}
.swipe-wrap {
  overflow: hidden;
  position: relative;
}
.swipe-wrap > div {
  float:left;
  width: 100%;
  position: relative;
}

.valign-wrapper {
  height: 53vh;
}

.valign {
  margin: 0 auto;
}

#home-buttons .home-button {
  background-color: #476373;
  margin: 20px auto;
  display: block;
}

#currents-save-button .save-button {
  background-color: #476373;
  margin: 20px auto;
  display: block;
  margin-top: -140px;
}

#start-day-button .start-day {
  background-color: #476373;
  margin: 20px auto;
  display: block;
  margin-top: -140px;
}

#login-button .login {
  background-color: #476373;
  margin: 20px auto;
  display: block;
  margin-top: -140px;
}

#registration-button .register {
  background-color: #476373;
  margin: 20px auto;
  display: block;
  margin-top: -140px;
}

#build-button .build {
  background-color: #367498;
  margin: 20px auto;
  display: block;
  margin-top: -140px;
  font-size: 1.2rem;
}


.placeholder-icon {
  padding: 10px 0px 0px 10px;
  width: 15%;
  height: 80%;
}

#goodnight-message {
  color: white;
}

.errors {
  text-align: center;
}


